{
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "project": "./tsconfig.json"
    },
    "env": {
      "node": true,
      "es2020": true
    },
    "rules": {
      "@typescript-eslint/semi": ["error", "always"]
    }
  }
  